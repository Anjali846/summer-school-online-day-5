{
  "manifest_version": 3,
  "name": "Weather from Current Location",
  "version": "1.0",
  "description": "Check current weather based on your real-time location.",
  "permissions": ["geolocation"],
  "host_permissions": [
    "https://api.openweathermap.org/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
